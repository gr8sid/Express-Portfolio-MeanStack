.glow {
  font-size: 40px;
   color: #CEF0D4; 
   font-size: 40px; 
   font-weight: normal; 
   line-height: 48px;
   margin-top:10px; 
   top:10px;
   left:20px
   text-shadow: 1px 1px 2px black;
  text-align: center;
  -webkit-animation: glow 1s ease-in-out infinite alternate;
  -moz-animation: glow 1s ease-in-out infinite alternate;
  animation: glow 1s ease-in-out infinite alternate;
 font-family: 'Billabong'
}

@-webkit-keyframes glow {
 

  from {
    text-shadow: 0 0 10px #FF9900, 0 0 20px #fff, 0 0 30px #FF9900, 0 0 40px #FF9900, 0 0 50px #FF9900, 0 0 50px #FF9900, 0 0 50px #FF9900;
  }
  
  to {
    text-shadow: 0 0 20px #fff, 0 0 30px #fff, 0 0 40px #fff, 0 0 50px #FF9900, 0 0 60px #FF9900, 0 0 60px #FF9900, 0 0 50px #FF9900;
  }
}
</style>
